# Gateway API Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to Git!

# Security - REQUIRED
GATEWAY_API_KEY=<generate with: openssl rand -hex 32>

# Encryption - OPTIONAL (for payload encryption)
GATEWAY_PUBLIC_KEY=

# HMAC Time Window (seconds)
MAX_TIMESTAMP_DIFF=300

# Network Configuration - REQUIRED
# Customize subnet based on gateway number
# Gateway 1: 10.0.1.0/24, fd42:4242:1::/64
# Gateway 2: 10.0.2.0/24, fd42:4242:2::/64
# Gateway 3: 10.0.3.0/24, fd42:4242:3::/64
WG_IPV4_SUBNET=10.0.X.0/24
WG_IPV6_SUBNET=fd42:4242:X::/64

# WireGuard Port
WG_DEFAULT_PORT=51820

# DNS Servers
DNS_SERVERS={"d1":"1.1.1.1","d2":"8.8.8.8","d3":"9.9.9.9"}


